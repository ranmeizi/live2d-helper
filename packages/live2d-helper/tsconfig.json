{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "components": ["../packages/framwork/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../Core/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
