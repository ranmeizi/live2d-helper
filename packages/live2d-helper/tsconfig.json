{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "components": ["../packages/framwork/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../Core/*.ts"
  ]
}
